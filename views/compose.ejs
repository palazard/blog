<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle" class="form-label">Title</label>
        <input type="text" name="postTitle" id="postTitle" class="form-control">
    </div>
    <div class="form-group">
        <label for="postContent" class="form-label">Content</label>
        <textarea name="postContent" id="postContent" rows="10" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" value="compose" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer'); -%>